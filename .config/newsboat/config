# auto relaod
auto-reload yes

browser "firefox --new-window %u"

urls-source "freshrss"
freshrss-url "https://feeds.flossboxin.org.in/p/api/greader.php"
freshrss-login "k9_"
freshrss-passwordfile "/home/k9guardian/.local/state/newsboat/freshrss-passwordfile"

# vim keybinds
unbind-key j
unbind-key k
unbind-key J
unbind-key K

bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# open video in mpv
macro y set browser "mpv %u" ; open-in-browser ; set browser "firefox --new-window %u"
