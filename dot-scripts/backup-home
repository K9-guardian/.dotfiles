#!/bin/sh
NAS="/mnt/nas/share/k9"
export BORG_REPO='/mnt/borg/borg_homedirs/'
export BORG_PASSCOMMAND='pass borg/k9'

borg create --stats --progress ::{user}@{hostname}:{now} \
  "$NAS" \
  "$HOME/.config" \
  "$HOME/.local" \
  "$HOME/.gnupg" \
  "$HOME/.passfiles" \
  "$HOME/.password-store" \
  "$HOME/.ssh"
